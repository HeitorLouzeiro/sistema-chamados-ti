# URL da API Django
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Configurações da aplicação
NEXT_PUBLIC_APP_NAME="Sistema de Chamados TI"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Configurações de ambiente
NODE_ENV=development

# URLs para diferentes ambientes
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Configurações de autenticação (opcional - apenas para referência)
# O tempo real é controlado pela API Django (1 hora)
NEXT_PUBLIC_TOKEN_REFRESH_THRESHOLD=300000

# Configurações de upload de arquivos
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,application/pdf,.doc,.docx

# Configurações de paginação
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Configurações de desenvolvimento
NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# Para produção, altere:
# NODE_ENV=production
# NEXT_PUBLIC_API_URL=https://sua-api.com/api
# NEXT_PUBLIC_BASE_URL=https://seu-dominio.com
# NEXT_PUBLIC_SHOW_DEBUG_INFO=false
